<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body>
    <%- include('_header') %>
    <div>
      <section class="vh-100">
        <div class="container py-5 h-100">
          <div
            class="row d-flex align-items-center justify-content-center h-100"
          >
            <div class="col-md-8 col-lg-7 col-xl-6">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                class="img-fluid"
                alt="Phone image"
              />
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
              <form action="/user/create" method="POST">
                <!-- Name input -->
                <div class="form-outline mb-2">
                  <input
                    type="text"
                    name="name"
                    class="form-control form-control-lg"
                    placeholder="Your Name"
                    required
                  />
                </div>

                <!-- Email input -->
                <div class="form-outline mb-2">
                  <input
                    type="email"
                    name="email"
                    class="form-control form-control-lg"
                    placeholder="Email"
                    required
                  />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-2">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control form-control-lg"
                    placeholder="Password"
                    onkeyup="passwordMatch()"
                    required
                  />
                </div>

                <!--Connfirm Password input -->
                <div class="form-outline mb-2">
                  <input
                    type="password"
                    id="confirm_password"
                    name="confirm_password"
                    class="form-control form-control-lg"
                    placeholder="Confirm Password"
                    onkeyup="passwordMatch()"
                    required
                  />
                </div>
                <div id="passCheck" style="text-align: end; color: red"></div>
                <div
                  id="captcha"
                  style="margin-bottom: 5px; display: none"
                  class="g-recaptcha"
                  data-sitekey="6LePl2AgAAAAAHVGqwAvvgV88cbWfDv444rq88Ir"
                  data-callback="recaptcha_callback"
                ></div>
                <!-- Submit button -->
                <button
                  type="submit"
                  id="submit"
                  disabled
                  class="btn btn-primary btn-lg btn-block"
                >
                  Sign Up
                </button>
              </form>
              <div class="divider d-flex align-items-center my-2">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
              </div>
              <a
                class="btn btn-lg btn-block"
                style="background-color: #dd4b39; color: white"
                href="/user/auth/google"
                role="button"
              >
                <i class="fab fa-google me-2"></i>Sign Up with Google
              </a>
              <div
                class="d-flex justify-content-between align-items-center my-4"
              >
                <p class="mb-0 me-2">Already have an account?</p>
                <a href="/user/signin" class="btn btn-outline-primary"
                  >Go to Login</a
                >
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <script>
      function passwordMatch() {
        let password = document.getElementById("password").value;
        let confirm_password =
          document.getElementById("confirm_password").value;
        let passCheck = document.getElementById("passCheck");
        let captcha = document.getElementById("captcha");
        // console.log(password);
        if (password.length == 0 || confirm_password == 0) {
          passCheck.style.display = "none";
        } else if (confirm_password.length > 0) {
          if (password === confirm_password) {
            passCheck.style.display = "block";
            passCheck.style.color = "green";
            passCheck.innerHTML = "Password Match";
            captcha.style.display = "block";
          } else {
            passCheck.style.display = "block";
            passCheck.style.color = "red";
            passCheck.innerHTML = "Password do not Match..!";
            // captcha.setAttribute("disabled", "true");
          }
        }
      }
      function recaptcha_callback() {
        let submitButton = document.getElementById("submit");
        submitButton.removeAttribute("disabled");
      }
    </script>
  </body>
</html>
