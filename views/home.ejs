<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body>
    <%- include('_header') %>
    <div>
      <section class="vh-100">
        <div class="container py-5 h-100">
          <div
            class="row d-flex align-items-center justify-content-center h-100"
          >
            <div class="col-md-8 col-lg-7 col-xl-6">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                class="img-fluid"
                alt="Phone image"
              />
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
              <!-- Personal Detail -->
              <div id="user-detail-container" class="card" style="width: 25rem">
                <div class="text-end" style="margin: 5px">
                  <a
                    href="/user/logout"
                    class="btn btn-outline-secondary"
                    style="border: none"
                    >Logout</a
                  >
                </div>
                <div class="card-body p-lg-5">
                  <h1 class="card-title">Hi,<br /><%= user.name%></h1>
                  <p class="card-text">Your Email: <b><%= user.email%></b></p>
                  <p class="card-text">
                    <i
                      >Treat Yourself like Someone you loved, Beacause you are
                      already Enough.</i
                    >
                  </p>
                  <br />
                  <div class="text-end">
                    <button
                      onclick="openResetContainer()"
                      class="btn btn-danger"
                    >
                      Reset Password
                    </button>
                  </div>
                </div>
              </div>
              <div
                id="reset-container"
                class="card"
                style="display: none; width: 25rem"
              >
                <div class="text-end" style="margin: 5px">
                  <button
                    onclick="closeResetContainer()"
                    class="btn btn-outline-danger"
                  >
                    X
                  </button>
                </div>
                <div class="card-body px-lg-5">
                  <!-- Name input -->
                  <form action="/user/update" method="POST">
                    <div class="form-outline mb-2">
                      <label class="form-label">Your Name</label>
                      <input
                        type="text"
                        name="name"
                        class="form-control form-control-lg"
                        value="<%= user.name%>"
                        required
                      />
                      <input
                        type="text"
                        name="id"
                        value="<%= user._id%>"
                        hidden
                      />
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-2">
                      <label class="form-label">Email address</label>
                      <input
                        type="email"
                        name="email"
                        class="form-control form-control-lg"
                        value="<%= user.email%>"
                        required
                        readonly
                      />
                    </div>
                    <!--New Password Password input -->
                    <div class="form-outline mb-2">
                      <label class="form-label">Password</label>
                      <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control form-control-lg"
                        onkeyup="passwordMatch()"
                        required
                      />
                    </div>
                    <!--Confirm Password Password input -->
                    <div class="form-outline mb-2">
                      <label class="form-label">Confirm Password</label>
                      <input
                        type="password"
                        name="confirm_password"
                        id="confirm_password"
                        class="form-control form-control-lg"
                        onkeyup="passwordMatch()"
                        required
                      />
                      <div
                        id="passCheck"
                        style="text-align: end; color: red"
                      ></div>
                    </div>
                    <!-- Submit button -->
                    <button
                      type="submit"
                      id="update"
                      class="btn btn-outline-secondary btn-lg btn-block"
                      disabled
                    >
                      Update
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <script>
      function openResetContainer() {
        document.getElementById("user-detail-container").style.display = "none";
        document.getElementById("reset-container").style.display = "block";
      }
      function closeResetContainer() {
        document.getElementById("user-detail-container").style.display =
          "block";
        document.getElementById("reset-container").style.display = "none";
      }

      function passwordMatch() {
        let password = document.getElementById("password").value;
        let confirm_password =
          document.getElementById("confirm_password").value;
        let passCheck = document.getElementById("passCheck");
        let updateButton = document.getElementById("update");
        // console.log(password);
        if (password.length == 0 || confirm_password == 0) {
          passCheck.style.display = "none";
        } else if (confirm_password.length > 0) {
          if (password === confirm_password) {
            passCheck.style.display = "block";
            passCheck.style.color = "green";
            passCheck.innerHTML = "Password Match";
            updateButton.removeAttribute("disabled");
          } else {
            passCheck.style.display = "block";
            passCheck.style.color = "red";
            passCheck.innerHTML = "Password do not Match..!";
            updateButton.setAttribute("disabled", "true");
          }
        }
      }
    </script>
  </body>
</html>
